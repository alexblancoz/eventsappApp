<h1 style="text-align:center">Todos los Eventos</h1>

<% @events.each do |event| %>
    <div class="row">
        <div class="col-md-2">
            <section class="chef_info center">
                
            </section>
        </div>
        <div class="col-md-6 well">
            <div class="pull-right">
                <%= link_to favorite_event_path(event, favorite: true), method: :post do %>
                    <i style="font-size:20pt" class="glyphicon glyphicon glyphicon-star-empty"></i> &nbsp <%= event.status %>
                <% end %>
            </div>
            <h4><%= link_to event.name, event_path(event) %></h4>
            <p><%= event.description %></p>
            <p>
                <span class="quiet"><small><%= time_ago_in_words(event.created_at) %> ago</small></span>
            </p>
        </div>
        <div class="col-md-4">
            <%= image_tag(event.picture.url, size: "250x150", class: "gravatar") if event.picture? %>
        </div>
    </div>
    
<% end %>
