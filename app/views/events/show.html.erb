<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1><%= @event.name %></h1>
        </div>
        
        <div class="col-md-6">
            <% if logged_in? and @event.user == current_user %>
                <p><%= link_to "Editar evento", edit_event_path(@event), class: "btn btn-success pull-right" %></p>
            <% end %>
            <% if logged_in? and @event.user != current_user %>
                <p><%= link_to "Comprar boleto", ticket_event_path(@event, ticket: true), class: "btn btn-success pull-right" %></p>
            <% end %>
        </div>
        
    </div>
    <hr/>
    <div class="show_recipe">
        <%= image_tag(@event.picture.url, size: "250x150", class: "gravatar") if @event.picture? %>
    </div>
    <div class="well">
        <div class="pull-right">
            <%= link_to favorite_event_path(@event, favorite: true), method: :post do %>
                <i style="font-size:20pt" class="glyphicon glyphicon glyphicon-star-empty"></i> &nbsp <%= @event.status %>
            <% end %>
        </div>
        <h4>$<%= @event.price %></h4>
        <h4><%= simple_format(@event.description) %></h4>
        <h4><%= @event.address %></h4>
    </div>
</div>