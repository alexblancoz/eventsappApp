<div class="container">
<div class="row">
    <div class="col-md-12">
        <% flash.each do |message_type, messge| %>
          <div class="alert alert-<%= message_type %>">
            <div class="row">
              <p class="col-md-11" style="text-align:center;"><%= messge %></p>
              <a class="close col-md-1" data-dismiss="alert">x</a>
            </div>
          </div>
        <% end %>
    </div>
</div>
</div>