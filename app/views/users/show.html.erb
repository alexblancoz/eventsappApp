<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h1 style="text-align:center;"><%= @user.name %> <%= @user.last_names %></h1>
        </div>
        <hr/>
        <br><br><br>
        <div class="col-md-8 col-md-offset-2">
            <div class="well">
                <div class="row">
                    <div class="col-md-8">
                        <p><%= @user.email %></p>
                    </div>
                    <div class="col-md-4">
                        <p><%= link_to "Editar perfil", edit_user_path(@user), class: "btn btn-success pull-right" %></p>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
            <h2 style="text-align:center;">Eventos de <%= @user.name %>:</h2>
            <% @user.events.each do |event| %>
                <div class="row">
                    <div class="col-md-12 well">
                        <div class="pull-right">
                            <%= link_to favorite_event_path(event, favorite: true), method: :post do %>
                                <i style="font-size:20pt" class="glyphicon glyphicon glyphicon-star-empty"></i> &nbsp <%= event.status %>
                            <% end %>
                        </div>
                        <h4><%= link_to event.name, event_path(event) %></h4>
                        <p><%= event.description %></p>
                        <p>
                            <span class="quiet"><small><%= time_ago_in_words(event.created_at) %> ago</small></span>
                        </p>
                    </div>
                </div>
            <% end %>
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-5">
            <h2 style="text-align:center;">Boletos de <%= @user.name %>:</h2>
            <% @user.tickets.each do |ticket| %>
                <div class="row">
                    <div class="col-md-12 well">
                        <h4><%= Event.find(ticket.event_id).name %></h4>
                        <h5>NÃºmero de boleto: <%= ticket.id %></h5>
                    </div>
                </div>
            <% end %>
            </div>
        </div>
    </div>
    <hr/>
</div>